{
  "name": "twitter-enhanced-extension",
  "version": "1.2.4",
  "description": "A Chrome extension to enhance Twitter and X, featuring video information retrieval and support for both domains",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/penkzhou/twitter-enhanced.git"
  },
  "scripts": {
    "build": "node utils/build.js",
    "dev": "node utils/dev.js",
    "start": "node utils/webserver.js",
    "lint": "eslint 'src/**/*.ts' 'src/**/*.tsx'",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "prettier:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "analyze": "webpack-bundle-analyzer build/stats.json",
    "clean": "rm -rf build node_modules pnpm-lock.yaml && pnpm install",
    "security:check": "pnpm audit",
    "security:fix": "pnpm audit --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write",
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.0.0",
    "dotenv-webpack": "^8.1.0",
    "idb": "^8.0.0",
    "lucide-react": "^0.562.0",
    "postcss-loader": "^8.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.0",
    "tw-animate-css": "^1.2.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/eslint-parser": "^7.28.6",
    "@babel/preset-react": "^7.28.5",
    "@eslint/js": "^9.0.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "babel-loader": "^10.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "fake-indexeddb": "^6.2.5",
    "fs-extra": "^11.3.3",
    "globals": "^17.0.0",
    "html-loader": "^5.0.0",
    "html-webpack-plugin": "^5.6.6",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "jest-webextension-mock": "^4.0.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.41",
    "prettier": "^3.0.0",
    "react-refresh": "^0.18.0",
    "react-refresh-typescript": "^2.0.7",
    "sass": "^1.57.1",
    "sass-loader": "^16.0.0",
    "source-map-loader": "^5.0.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.18",
    "terser-webpack-plugin": "^5.3.6",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.0",
    "webpack-dev-server": "^5.0.0",
    "zip-webpack-plugin": "^4.0.1"
  }
}
