{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "options_page": "options.html",
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon-128.png",
      "48": "icon-48.png",
      "16": "icon-16.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "downloads"
  ],
  "host_permissions": [
    "*://twitter.com/*",
    "*://mobile.twitter.com/*",
    "*://api.twitter.com/*",
    "*://tweetdeck.twitter.com/*",
    "*://x.com/*",
    "*://*.x.com/*"
  ],
  "icons": {
    "128": "icon-128.png",
    "48": "icon-48.png",
    "16": "icon-16.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://twitter.com/*",
        "*://mobile.twitter.com/*",
        "*://api.twitter.com/*",
        "*://tweetdeck.twitter.com/*",
        "*://x.com/*",
        "*://*.x.com/*"
      ],
      "js": [
        "contentScript.bundle.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.css",
        "icon-128.png",
        "icon-48.png",
        "icon-16.png",
        "content.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline';"
  }
}