{
  "manifest_version": 3,
  "name": "Twitter Enhanced",
  "description": "Add extra features to Twitter",
  "options_page": "options.html",
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon-128.png",
      "48": "icon-48.png",
      "16": "icon-16.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "downloads",
    "identity"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://api.twitter.com/*"
  ],
  "icons": {
    "128": "icon-128.png",
    "48": "icon-48.png",
    "16": "icon-16.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "contentScript.bundle.js"
      ],
      "css": [
        "content.styles.css"
      ]
    }
  ],
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    {
      "resources": [
        "content.styles.css",
        "icon-128.png",
        "icon-48.png",
        "icon-16.png"
      ],
      "matches": []
    }
  ]
}