{
    "manifest_version": 3,
    "name": "Twitter Enhanced",
    "version": "1.0",
    "description": "Add extra features to Twitter",
    "permissions": [
        "activeTab",
        "storage",
        "https://twitter.com/*",
        "https://x.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*"
            ],
            "js": [
                "dist/content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}